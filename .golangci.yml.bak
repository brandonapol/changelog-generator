# Simple configuration for golangci-lint
run:
  deadline: 5m
  tests: true

linters:
  enable:
    - errcheck
    - govet
    - ineffassign
    - staticcheck
    - typecheck
    - unused
    - gofmt
    - goimports
  disable:
    - deadcode # deprecated
    - varcheck # deprecated
    - structcheck # deprecated
